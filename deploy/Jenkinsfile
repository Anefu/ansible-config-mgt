pipeline {
  agent any
  stages {
    stage('Clone repo') {
      parallel {
        stage('Clone repo') {
          steps {
            git(branch: 'dev', url: 'https://github.com/Anefu/ansible-config-mgt.git')
          }
        }

        stage('') {
          steps {
            branch_path = 'ansible-config-mgt_'+env.BRANCH_NAME
            sh ' sudo sed -i -e "s/#roles_path * = \\/etc\\/ansible\\/roles/roles_path = \\/var\\/lib\\/jenkins\\/workspace\\/${branch_name}/g" /etc/ansible/ansible.cfg'
          }
        }
        stage('') {
          steps {
          sh " echo 'jenkins ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers "
          }
        }
      }


      }
    

    stage('Run playbook') {
      steps {
        ansiblePlaybook(credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev', playbook: 'playbooks/site.yml')
      }
    }

    stage('Clean up') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenUnstable: true, deleteDirs: true)
      }
    }

  }
}
pipeline {
  agent any
  environment {
        current_space = sh(returnStdout: true, script: 'printenv | grep current_env | cut -d= -f2')
        roles_path    = 'ansible-config-mgt_'+'current_env'
    }
  stages {
    stage('Clone repo') {
      parallel {
        stage('Clone repo') {
          steps {
            git(branch: current_space, url: 'https://github.com/Anefu/ansible-config-mgt.git')
          }
        }

        stage('Update ansible.cfg') {
          steps {
            sh "sudo sed -i -e 's/#roles_path * = \\/etc\\/ansible\\/roles/roles_path = \\/var\\/lib\\/jenkins\\/workspace\\/${roles_path}/g' /etc/ansible/ansible.cfg"
          }
        }
      }
    }
    

    stage('Run playbook') {
      steps {
        ansiblePlaybook(credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev', playbook: 'playbooks/site.yml')
      }
    }

    stage('Clean up') {
      steps {
        cleanWs(cleanWhenAborted: true, cleanWhenFailure: true, cleanWhenNotBuilt: true, cleanWhenUnstable: true, deleteDirs: true)
      }
    }

  }
}

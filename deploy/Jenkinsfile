pipeline {
    agent any

  stages {
    stage('Clone repo') {
      steps {
        git 'https://github.com/Anefu/ansible-config-mgt.git'
      }
    }
    stage('Run playbook') {
      steps {
        ansiblePlaybook credentialsId: 'd345d25b-1b13-4ef0-91f5-5157f94f30ac', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev', playbook: 'playbooks/site.yml'      }
    }


    }
  post {
      always {
          deleteDir() /* clean up our workspace */
        }
    }
}
pipeline {
    agent any

  stages {
    stage('Clone repo') {
      steps {
        git branch: 'dev/test-dev', url: 'https://github.com/Anefu/ansible-config-mgt.git'
      }
    }
    stage('Run playbook') {
      steps {
        ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory/dev', playbook: 'playbooks/site.yml'
         }
    }


    }
  post {
      always {
          deleteDir() /* clean up our workspace */
        }
    }
}